<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Track Shipments</title>
    <link rel="stylesheet" href="cust.css">
</head>
<body>
    <!-- tracking section -->
    <section id="tracking" class="content-section">
        <h2>Track Shipments</h2>
        <div class="search-section">
            <input type="search" placeholder="Enter tracking number">
            <button id="trackBtn" class="btn">Track</button>
        </div>

        <!-- package details container -->
        <table class="package-details">
            <thead>
                <tr>
                    <th>Package ID</th>
                    <th>Pickup Address</th>
                    <th>Delivery Address</th>
                    <th>Size</th>
                    <th>Fragile</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if(packages.length > 0){ %>
                    <% packages.forEach(function(package) { %>
                        <tr>
                            <td><%= package.packageID %></td>
                            <td><%= package.pickup_address %></td>
                            <td><%= package.delivery_address %></td>
                            <td><%= package.size %></td>
                            <td><%= package.fragile %></td>
                            <td class="action-buttons">
                                <button class="btn btn-view">View</button>
                                <button class="btn btn-update">Update</button>
                                <button class="btn btn-delete">Delete</button>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="6">No packages found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </section>
